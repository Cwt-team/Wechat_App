page {
  background-color: #f7f7f7;
}
 
/* 设置背景颜色 */
.top-bg {
  height: 220rpx;
  background: linear-gradient(180deg, #008c8c 0%, #009999 100%);
}
 
/* 圆角盒子 */
.box {
  background-color: white;
  margin-top: -120rpx;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  padding: 0 30rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}
 
/* 头像部分 */
.head-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 30rpx;
}
 
.avatar {
  margin-top: -80rpx;
  font-weight: inherit;
  display: flex;
  justify-content: center;
  background-color: transparent;
  padding: 0;
}
 
.avatar::after {
  border: none;
}
 
.head-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 6rpx solid #fff;
}
 
.tip {
  font-size: 32rpx;
  color: #333;
  margin: 20rpx 0 5rpx;
  font-weight: 500;
}
 
/* 列表部分 */
.row {
  min-height: 88rpx;
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  background: #fff;
  margin-bottom: 2rpx;
  position: relative;
}

.row:active {
  background-color: #f9f9f9;
}
 
.row::after {
  border: none;
}
 
.text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-left: 16rpx;
}
 
.left {
  width: 90%;
  text-align: left;
  display: flex;
  align-items: center;
}

.left van-icon {
  color: #008c8c;
  font-size: 36rpx;
  margin-right: 4rpx;
}
 
.right {
  position: absolute;
  right: 20rpx;
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
 
.end {
  background-color: white;
  margin-top: 20rpx;
  padding: 0 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}
 
.footer {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  margin: 30rpx 0;
  color: #999;
}

.info-text {
  flex: 1;
  text-align: right;
  padding-right: 40rpx;
}

.house-info {
  font-size: 28rpx;
  color: #666;
  display: inline-block;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
}

/* 按钮样式优化 */
button.row {
  margin: 0;
  padding: 32rpx 20rpx;
  line-height: 1.5;
  border-radius: 0;
}

/* 图标样式 */
.icon-small {
  color: #008c8c;
  font-size: 36rpx;
}

/* 切换用户和退出登录按钮 */
.end button:last-child {
  border-bottom: none !important;
}

/* 添加动画效果 */
.row {
  transition: all 0.3s ease;
}

.row:active {
  transform: scale(0.98);
}

/* 添加阴影效果 */
.box, .end {
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 基本信息行样式 */
.info-row {
  position: relative;
  padding: 32rpx 20rpx !important;
}
