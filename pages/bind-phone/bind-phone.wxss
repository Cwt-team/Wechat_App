.container {
  padding: 60rpx 40rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f6f7fb 0%, #ffffff 100%);
  box-sizing: border-box;
}

.avatar-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.1);
}

.nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.tips {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.benefits {
  margin-bottom: 60rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.benefit-item text {
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.bind-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  margin-top: 60rpx;
  border: none;
}

.bind-btn[loading] {
  opacity: 0.8;
} 