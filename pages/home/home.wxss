/* 生活服务部分样式 */
.service-section {
  padding: 20rpx;
  margin-top: 20rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.service-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 0 -10rpx;
}

.service-card {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.service-image {
  width: 100%;
  height: 180rpx;
  object-fit: cover;
}

.service-info {
  padding: 16rpx;
}

.service-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 6rpx;
}

.service-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}
 