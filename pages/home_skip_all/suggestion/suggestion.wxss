.container {
  padding: 20px;
  background-color: #f9f9f9;
}

.input-container {
  margin-bottom: 15px;
  padding: 10px;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 8px;
}

.picker, .input-field, .textarea-field {
  width: 100%;
  font-size: 16px;
  color: #333;
}

.textarea-field {
  height: 100px;
  resize: none;
}

.upload-button, .submit-button {
  width: 100%;
  padding: 10px;
  background-color: #28a745;
  color: white;
  border: none;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 15px;
}

.image-preview {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-bottom: 15px;
}

.preview-image {
  width: 100px;
  height: 100px;
  border-radius: 8px;
  object-fit: cover;
  border: 1px solid #ddd;
}

.history-button {
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 8px;
    text-align: center;
    font-size: 16px;
    font-weight: bold;
    margin-top: 20px;
  }