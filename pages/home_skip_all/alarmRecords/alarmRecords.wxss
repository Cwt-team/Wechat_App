.container {
  padding: 20rpx;
}

.header {
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.alarm-list {
  width: 100%;
}

.alarm-item {
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.alarm-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.alarm-type {
  font-weight: bold;
}

.alarm-status {
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.alarm-status.Pending {
  background: #ffd700;
  color: #fff;
}

.alarm-status.Processing {
  background: #1e90ff;
  color: #fff;
}

.alarm-status.Resolved {
  background: #90ee90;
  color: #fff;
}

.alarm-content {
  font-size: 28rpx;
  color: #666;
}

.house-info {
  margin-bottom: 6rpx;
}

.alarm-time {
  color: #999;
  font-size: 24rpx;
  margin-bottom: 6rpx;
}

.alarm-desc {
  margin-top: 10rpx;
}

.empty, .loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
} 