/* 容器样式 */
.container {
    padding: 20rpx;
    background-color: #f5f5f5;
    min-height: 100vh; /* 确保容器高度足够 */
  }
  
  /* 自定义按钮样式 */
  .custom-button {
      display:block;
    margin-bottom: 30rpx !important; /* 按钮之间的间距 */
    border-radius: 15rpx; /* 圆角 */
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1); /* 阴影 */
  }
  
  /* 按钮文字样式 */
  .custom-button .van-button__text {
    font-size: 16px;
    font-weight: bold;
  }

  .custom-button {
    transition: transform 0.2s ease;
  }
  
  .custom-button:active {
    transform: scale(0.98);
  }