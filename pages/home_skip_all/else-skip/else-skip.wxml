  <text class="text">智慧生活</text>
</view>

<view class="section">
  <van-grid column-num="4">
    <van-grid-item 
      wx:for="{{ lifeList }}" 
      wx:key="index"
      use-icon-slot
      text="{{ item.text }}"
      url="{{ item.url }}"
    >
      <image slot="icon" src="{{ item.icon }}" style="width: 40px; height: 40px;" />
    </van-grid-item>
  </van-grid>
</view>