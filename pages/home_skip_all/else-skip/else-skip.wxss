.container {
    display: flex;              /* 启用 Flex 布局 */
    align-items: center;        /* 垂直居中对齐 */
    justify-content: flex-start; /* 靠左对齐 */
    padding-left: 0;            /* 清除左侧 padding */
    margin-left: 0;             /* 清除左侧 margin */
  }
  
  .icon {
    width: 24px;               /* 图标宽度 */
    height: 24px;              /* 图标高度 */
    margin-right: 8px;         /* 图标与文字的间距 */
  }
  
  .text {
    font-size: 16px;           /* 文字大小 */
    margin: 0;                 /* 清除默认 margin */
    padding: 0;                /* 清除默认 padding */
  }
.divider {
    height: 20rpx;          /* 分隔线高度 */
    background-color: #f5f5f5;   /* 灰色色值 */
    margin: 20rpx 0;       /* 上下边距 */
    width: 100%;           /* 占满父容器宽度 */
  }
  
.page-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.section {
  margin-bottom: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 网格布局 */
.grid-container {
  display: flex;
  flex-wrap: wrap;
}

.grid-item {
  width: 25%;
  box-sizing: border-box;
  padding: 10rpx;
  position: relative;
}

.grid-item-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.grid-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.grid-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 管理模式相关样式 */
.manage-bar {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.manage-btn {
  background-color: #07c160;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

.save-btn {
  background-color: #1989fa;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

.manage-tip {
  background-color: #fff8e1;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.selected-count {
  margin-top: 10rpx;
  color: #ff9800;
  font-weight: bold;
}

.checkbox-icon {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

/* 选中项目的样式 */
.grid-item-selected {
  background-color: rgba(7, 193, 96, 0.1);
  border: 2rpx solid #07c160;
  border-radius: 8rpx;
}
  