.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  position: relative;
  border-bottom: 1rpx solid #eee;
}

.back-btn {
  padding: 10rpx;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

.history-list {
  padding: 20rpx;
}

.history-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.history-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.history-community {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.history-time {
  font-size: 26rpx;
  color: #999;
}

.history-rating {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.rating-text {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.star-container {
  display: flex;
}

.star-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 6rpx;
}

.history-comment {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.history-images {
  display: flex;
  flex-wrap: wrap;
}

.history-image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
} 