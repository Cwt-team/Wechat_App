.container {
  padding: 30rpx;
  background-color: #f8f8f8;
}

/* 加载样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
}

.loading {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #3399ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 页面卡片通用样式 */
.header-card, .progress-container, .detail-card {
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 报修单头部 */
.header-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-number {
  font-size: 28rpx;
  color: #333333;
}

.status {
  font-size: 28rpx;
  font-weight: bold;
}

/* 进度条样式 */
.progress-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.progress-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-node {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.node-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #dddddd;
  margin-bottom: 10rpx;
}

.progress-node.active .node-dot {
  background-color: #09bb07;
}

.node-name {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
}

.progress-node.active .node-name {
  color: #09bb07;
}

.progress-line {
  flex: 1;
  height: 2rpx;
  background-color: #dddddd;
}

.progress-line.active {
  background-color: #09bb07;
}

.progress-desc {
  font-size: 26rpx;
  color: #666666;
  padding: 20rpx 0;
}

/* 详情卡片通用样式 */
.card-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #3399ff;
  padding-left: 15rpx;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
}

.label {
  width: 180rpx;
  font-size: 28rpx;
  color: #999999;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.desc-text {
  line-height: 1.5;
}

/* 照片区域 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.image-item {
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

/* 按钮样式 */
.btn-container {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}

.btn {
  margin-bottom: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-radius: 40rpx;
}

.cancel-btn {
  background-color: #ffffff;
  color: #ff3b30;
  border: 1rpx solid #ff3b30;
}

.evaluate-btn {
  background-color: #09bb07;
  color: #ffffff;
}

.view-eval-btn {
  background-color: #3399ff;
  color: #ffffff;
}

.repair-again-btn {
  background-color: #ffffff;
  color: #3399ff;
  border: 1rpx solid #3399ff;
}

/* 空状态 */
.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #999999;
  font-size: 28rpx;
}

.no-data-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

/* 报修卡片 */
.repair-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 信息区域 */
.info-section {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.info-label {
  color: #666;
  min-width: 160rpx;
}

.info-value {
  color: #333;
  flex: 1;
}

/* 查询码样式 */
.query-code-section {
  background-color: #f9f9f9;
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 8rpx;
  border-left: 8rpx solid #07c160;
}

.query-label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.query-code {
  display: block;
  font-size: 42rpx;
  color: #ff6b00;
  font-weight: bold;
  margin-bottom: 10rpx;
  letter-spacing: 2rpx;
}

.query-tip {
  font-size: 24rpx;
  color: #999;
}

/* 处理进度区域 */
.progress-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

/* 时间线样式 */
.progress-timeline {
  position: relative;
  padding-left: 30rpx;
}

.progress-timeline:before {
  content: "";
  position: absolute;
  left: 10rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background-color: #ddd;
}

.timeline-item {
  position: relative;
  margin-bottom: 60rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -30rpx;
  top: 6rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #ddd;
  z-index: 2;
}

.timeline-item.completed .timeline-dot {
  background-color: #07c160;
  border: 4rpx solid rgba(7, 193, 96, 0.2);
  box-sizing: border-box;
}

.timeline-item.pending .timeline-dot {
  background-color: #ddd;
}

.timeline-content {
  padding-left: 20rpx;
}

.timeline-step {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.timeline-item.completed .timeline-step {
  color: #07c160;
}

.timeline-desc {
  font-size: 26rpx;
  color: #999;
}

/* 照片区域 */
.photo-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.photo-item {
  width: 210rpx;
  height: 210rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  border-radius: 8rpx;
}

/* 描述文本样式 */
.desc-text {
  word-break: break-all;
  display: -webkit-box;
  line-height: 1.5;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.action-btn {
  width: 48%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 30rpx;
  background-color: #f2f2f2;
  color: #333;
  border: none;
}

.action-btn.primary {
  background-color: #07c160;
  color: #fff;
} 