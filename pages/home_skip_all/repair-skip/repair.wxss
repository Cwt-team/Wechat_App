.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  position: relative;
  width: 100%;
  height: 200rpx;
}

.banner {
  width: 100%;
  height: 100%;
}

.title-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.3);
}

.title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

.subtitle {
  color: #ffffff;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.service-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.service-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.service-icon-container {
  width: 120rpx;
  height: 120rpx;
  background-color: #f0f8ff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.service-icon {
  width: 60rpx;
  height: 60rpx;
}

.service-name {
  font-size: 28rpx;
  color: #333333;
}

.notice-container {
  margin: 20rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.notice-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #3399ff;
  padding-left: 20rpx;
}

.notice-content {
  font-size: 28rpx;
  color: #666666;
}

.notice-item {
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.contact-info {
  margin: 20rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.contact-title {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.contact-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #3399ff;
} 