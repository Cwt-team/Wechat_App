/* 容器样式 */
.container {
    padding: 20px;
    background-color: #f9f9f9;
  }
  
  /* 输入容器 */
  .input-container {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 10px;
  }
  
  /* 输入框图标 */
  .input-icon {
    width: 20px;
    height: 20px;
    margin-right: 10px;
  }
  
  /* 输入框、选择器、文本域通用样式 */
  .input-field, .description-field, .picker {
    flex: 1;
    font-size: 14px;
    color: #333;
    border: none;
    outline: none;
  }
  
  /* Placeholder 样式 */
  .placeholder {
    color: #999;
    font-size: 14px;
    transition: all 0.3s ease;
  }
  
  /* 输入框聚焦时 Placeholder 动画 */
  .input-field:focus::placeholder, 
  .description-field:focus::placeholder {
    transform: translateY(-10px);
    font-size: 12px;
    color: #0858eb;
  }
  
  /* 选择器样式 */
  .picker {
    color: #333;
  }
  
  /* 上传按钮样式 */
  .upload-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 10px;
    background-color: #0858eb;
    color: white;
    border: none;
    border-radius: 8px;
    text-align: center;
    margin-bottom: 15px;
    font-size: 14px;
  }
  
  /* 按钮图标 */
  .button-icon {
    width: 16px;
    height: 16px;
    margin-right: 8px;
  }
  
  /* 提交按钮样式 */
  .submit-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 10px;
    background-color: #28a745;
    color: white;
    border: none;
    border-radius: 8px;
    text-align: center;
    margin-bottom: 15px;
    font-size: 16px;
    font-weight: bold;
  }
  
  /* 图片预览区域 */
  .image-preview {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 15px;
  }
  
  /* 图片预览样式 */
  .preview-image {
    width: 100px;
    height: 100px;
    border-radius: 8px;
    object-fit: cover;
    border: 1px solid #ddd;
  }
  
  /* 响应式调整 */
  @media (max-width: 480px) {
    .preview-image {
      width: 80px;
      height: 80px;
    }
  }