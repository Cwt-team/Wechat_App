/* 页面容器 */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
}

/* 表单项样式 */
.form-item {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
}

/* 表单项标签 */
.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

/* 必填标记 */
.required {
  color: #e64340;
  margin-left: 5rpx;
}

/* 输入框样式 */
.input-field {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 图片上传区域 */
.upload-area {
  margin-top: 20rpx;
}

.upload-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.upload-image {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f7f7f7;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-icon {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 提交按钮 */
.submit-btn {
  margin-top: 60rpx;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.disabled-btn {
  background-color: #ccc;
}

/* 分类选择区域 */
.type-selection {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.type-item {
  padding: 10rpx 20rpx;
  background-color: #f2f2f2;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.type-item.active {
  background-color: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}