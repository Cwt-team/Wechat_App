/* 容器样式 */
.container {
    padding: 20px;
    background-color: #f9f9f9;
  }
  
  /* 输入容器 */
  .input-container {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 10px;
  }
  
  /* 输入框图标 */
  .input-icon {
    width: 20px;
    height: 20px;
    margin-right: 10px;
  }
  
  /* 输入框、选择器、文本域通用样式 */
  .input-field, .description-field, .picker {
    flex: 1;
    font-size: 14px;
    color: #333;
    border: none;
    outline: none;
  }
  
  /* Placeholder 样式 */
  .placeholder {
    color: #999;
    font-size: 14px;
    transition: all 0.3s ease;
  }
  
  /* 输入框聚焦时 Placeholder 动画 */
  .input-field:focus::placeholder, 
  .description-field:focus::placeholder {
    transform: translateY(-10px);
    font-size: 12px;
    color: #0858eb;
  }
  
  /* 选择器样式 */
  .picker {
    color: #333;
  }
  
  /* 上传按钮样式 */
  .upload-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 88rpx;
    background: linear-gradient(135deg, #36cfc9, #0ba360);
    color: white;
    border: none;
    border-radius: 44rpx;
    text-align: center;
    margin-bottom: 30rpx;
    font-size: 32rpx;
    box-shadow: 0 4rpx 12rpx rgba(11, 163, 96, 0.3);
    transition: all 0.3s ease;
  }
  
  .upload-button:active {
    transform: scale(0.98);
    box-shadow: 0 2rpx 6rpx rgba(11, 163, 96, 0.2);
  }
  
  /* 提交按钮样式 */
  .submit-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 88rpx;
    background: linear-gradient(135deg, #ff4d4f, #ff7875);
    color: white;
    border: none;
    border-radius: 44rpx;
    text-align: center;
    margin-bottom: 30rpx;
    font-size: 32rpx;
    font-weight: bold;
    box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.3);
    transition: all 0.3s ease;
  }
  
  .submit-button:active {
    transform: scale(0.98);
    box-shadow: 0 2rpx 6rpx rgba(255, 77, 79, 0.2);
  }
  
  /* 按钮图标 */
  .button-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 12rpx;
  }
  
  /* 图片预览区域 */
  .image-preview {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 15px;
  }
  
  /* 图片预览样式 */
  .preview-image {
    width: 100px;
    height: 100px;
    border-radius: 8px;
    object-fit: cover;
    border: 1px solid #ddd;
  }
  
  /* 响应式调整 */
  @media (max-width: 480px) {
    .preview-image {
      width: 80px;
      height: 80px;
    }
  }

