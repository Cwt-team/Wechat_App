/* pages/home_skip_all/repair-skip/processFlow/repairhistory/repairhistory.wxss */
.history-container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.repair-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
  transition: all 0.3s ease;
}

.repair-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  padding-left: 40rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.order-number {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.order-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
}

.order-status.pending {
  color: #fa8c16;
  background: #fff7e6;
  border: 1rpx solid #ffd591;
}

.order-status.processing {
  color: #1890ff;
  background: #e6f7ff;
  border: 1rpx solid #91d5ff;
}

.order-status.completed {
  color: #52c41a;
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
}

.order-status.cancelled {
  color: #ff4d4f;
  background: #fff1f0;
  border: 1rpx solid #ffa39e;
}

.card-content {
  padding: 20rpx 0;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  line-height: 1.6;
}

.label {
  color: #666;
  width: 140rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  flex: 1;
}

.card-footer {
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.view-detail {
  font-size: 26rpx;
  color: #1890ff;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;     
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.delete-icon {
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  color: #999;
  font-size: 40rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
  z-index: 0;
}

.delete-icon:active {
  transform: scale(0.9);
  color: #ff4d4f;
}