/* pages/home_skip_all/repair-skip/processFlow/processFlow.wxss */
.repair-order {
    padding: 20rpx;
    background: #f5f5f5;
    min-height: 100vh;
  }
  
  .order-card {
    background: #fff;
    border-radius: 12rpx;
    padding: 30rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  }
  
  .order-header {
    border-bottom: 1rpx solid #eee;
    padding-bottom: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .order-number {
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
    display: block;
  }
  
  .order-date {
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
    display: block;
  }
  
  .info-item {
    display: flex;
    margin-bottom: 16rpx;
    font-size: 28rpx;
    line-height: 1.6;
  }
  
  .label {
    color: #666;
    width: 160rpx;
    flex-shrink: 0;
  }
  
  .value {
    color: #333;
    flex: 1;
  }
  
  .description {
    align-items: flex-start;
  }
  
  .process-flow {
    background: #fff;
    border-radius: 12rpx;
    padding: 30rpx;
    margin-bottom: 30rpx;
  }
  
  .flow-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
    color: #333;
  }
  
  .steps {
    position: relative;
  }
  
  .step-item {
    display: flex;
    position: relative;
    padding-bottom: 40rpx;
  }
  
  .step-circle {
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background: #ddd;
    margin-top: 10rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
  }
  
  .step-line {
    position: absolute;
    left: 10rpx;
    top: 30rpx;
    width: 2rpx;
    height: calc(100% - 20rpx);
    background: #ddd;
  }
  
  .step-content {
    flex: 1;
  }
  
  .step-title {
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
    display: block;
  }
  
  .step-desc {
    font-size: 24rpx;
    color: #999;
    margin-top: 6rpx;
    display: block;
  }
  
  /* 步骤状态样式 */
  .finish .step-circle {
    background: #07c160;
  }
  
  .process .step-circle {
    background: #1989fa;
  }
  
  .finish .step-line {
    background: #07c160;
  }
  
  .bottom-buttons {
    padding: 30rpx;
  }
  
  .history-btn {
    background: #07c160;
    color: #fff;
    border-radius: 8rpx;
    font-size: 30rpx;
  }