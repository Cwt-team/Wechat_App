.container {
    padding: 20px;
  }
  
  .input-field, .description-field, .picker {
    width: 100%;
    margin-bottom: 15px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }
  
  .upload-button, .submit-button {
    width: 100%;
    padding: 10px;
    background-color: #0858eb;
    color: white;
    border: none;
    border-radius: 5px;
    text-align: center;
    margin-bottom: 15px;
  }
  
  .image-preview {
    display: flex;
    flex-wrap: wrap;
  }
  
  .preview-image {
    width: 100px;
    height: 100px;
    margin-right: 10px;
    margin-bottom: 10px;
  }