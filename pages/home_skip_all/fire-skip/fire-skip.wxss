/* pages/fire-skip/fire-skip.wxss */
.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.fire-alarm-box {
  width: 90%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.fire-alarm-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.fire-alarm-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.fire-alarm-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.fire-alarm-button {
  width: 80%;
  height: 80rpx;
  background-color: #e64340;
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.fire-alarm-notice {
  font-size: 24rpx;
  color: #999;
}