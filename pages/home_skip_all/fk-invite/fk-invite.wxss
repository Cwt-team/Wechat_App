.container {
  padding: 20px;
  background-color: #f9f9f9;
}

.picker-container {
  margin-bottom: 15px;
  padding: 10px;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 8px;
}

.picker {
  font-size: 16px;
  color: #333;
}

.input-field {
  width: 100%;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
}

.generate-button {
  width: 100%;
  padding: 10px;
  background-color: #28a745;
  color: white;
  border: none;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
}

.visitor-code {
  margin-top: 20px;
  font-size: 18px;
  color: #333;
}

.history-button {
  width: 100%;
  padding: 10px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  margin-top: 20px;
}