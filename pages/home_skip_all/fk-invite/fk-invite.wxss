/* pages/home_skip_all/fk-invite/fk-invite.wxss */
.container {
  padding: 20px;
  background-color: #f9f9f9;
}

.login-tip {
  text-align: center;
  padding: 20px;
  color: #ff4d4f;
  font-size: 16px;
}

.form-container {
  margin-bottom: 20px;
}

.picker-container {
  margin-bottom: 15px;
  padding: 10px;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 8px;
}

.picker {
  font-size: 16px;
  color: #333;
}

.input-field {
  width: 100%;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  background-color: #fff;
}

.textarea-field {
  width: 100%;
  height: 80px;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  background-color: #fff;
}

.generate-button {
  width: 100%;
  padding: 10px;
  background-color: #28a745;
  color: white;
  border: none;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
}

.visitor-code {
  margin-top: 20px;
  padding: 15px;
  background-color: #fff;
  border: 1px solid #28a745;
  border-radius: 8px;
  text-align: center;
}

.code-title {
  font-size: 16px;
  color: #333;
  margin-bottom: 10px;
}

.code-value {
  font-size: 32px;
  font-weight: bold;
  color: #28a745;
  margin-bottom: 10px;
}

.code-tip {
  font-size: 14px;
  color: #666;
}

.history-button {
  width: 100%;
  padding: 10px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  margin-top: 20px;
}