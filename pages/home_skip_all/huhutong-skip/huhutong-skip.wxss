.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #fff;
}

.display {
  margin-bottom: 30px;
  font-size: 40px;
  color: #333;
}

.dial-pad {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
  margin-bottom: 25px;
}

.dial-button {
  width: 80px;
  height: 80px;
  border-radius: 80%;
  background-color: #448f48;
  color: white;
  font-size: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10px 8px rgba(0, 0, 0, 0.2);
}

.actions {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 20px;
}

.action-button {
  color: #333;
}

.call-button {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background-color: #448f48;
  color: white;
  font-size: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
}