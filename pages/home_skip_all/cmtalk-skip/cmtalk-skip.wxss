/* 通知容器 */
.notice-container {
    padding: 20rpx;
    background-color: #f5f5f5;
  }
  
  /* 单个通知条目 */
  .notice-item {
    background-color: #ffffff;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
  }
  
  /* 通知标题 */
  .notice-title {
    font-size: 16px;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 8rpx;
  }
  
  /* 通知内容 */
  .notice-content {
    font-size: 14px;
    color: #666;
    display: block;
    margin-bottom: 8rpx;
  }
  
  /* 发布时间 */
  .notice-time {
    font-size: 12px;
    color: #999;
    display: block;
    text-align: right;
  }

  /* 页面背景 */
page {
    background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
  }
  
  /* 功能卡片 */
  .function-card {
    background-color: #ffffff;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  }