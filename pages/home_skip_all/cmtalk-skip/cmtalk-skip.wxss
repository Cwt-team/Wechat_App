/* 通知容器 */
.notice-container {
    padding: 20rpx;
    background-color: #f5f5f5;
    min-height: 100vh;
  }
  
  /* 单个通知条目 */
  .notice-item {
    background-color: #ffffff;
    border-radius: 12rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
    position: relative;
  }
  
  /* 通知标题 */
  .notice-title {
    font-size: 16px;
    font-weight: bold;
    color: #333;
    display: block;
    margin-bottom: 16rpx;
  }
  
  /* 通知内容 */
  .notice-content {
    font-size: 14px;
    color: #666;
    display: block;
    margin-bottom: 16rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  /* 发布时间 */
  .notice-time {
    font-size: 12px;
    color: #999;
    display: block;
    text-align: right;
  }

  /* 页面背景 */
page {
    background: #f5f7fa;
  }
  
  /* 功能卡片 */
  .function-card {
    background-color: #ffffff;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  }

  /* 加载状态容器 */
  .loading-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 40rpx 0;
    height: 200rpx;
  }

  /* 空状态容器 */
  .empty-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
    height: 400rpx;
  }

  /* 空状态文本 */
  .empty-text {
    font-size: 14px;
    color: #999;
    margin-top: 20rpx;
  }

  /* 加载更多提示 */
  .loading-more, .no-more {
    text-align: center;
    padding: 20rpx 0;
    color: #999;
    font-size: 12px;
  }

  /* 登录提示 */
  .login-tip {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
    color: #666;
    font-size: 14px;
  }

  /* 登录按钮 */
  .login-btn {
    margin-top: 30rpx;
    background-color: #1989fa;
    color: #fff;
    font-size: 14px;
    padding: 8rpx 30rpx;
    border-radius: 30rpx;
  }