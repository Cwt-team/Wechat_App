/* pages/bind-account/bind_account.wxss */
.container {
  padding: 60rpx 40rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f6f7fb 0%, #ffffff 100%);
  box-sizing: border-box;
}

.bind-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.bind-form {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 10rpx;
}

.input {
  height: 80rpx;
  font-size: 28rpx;
  width: 100%;
}

.btn-group {
  margin-top: 60rpx;
}

.bind-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #1989fa;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  margin-bottom: 30rpx;
  border: none;
}

.create-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  border: none;
}

.bind-btn:active,
.create-btn:active {
  opacity: 0.8;
}