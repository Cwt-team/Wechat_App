<view class="container">
  <view class="user-info-card">
    <view class="avatar-container">
      <image class="avatar" src="{{userInfo.avatar_url || '/images/default-avatar.png'}}"></image>
    </view>
    
    <view class="info-item">
      <text class="label">姓名：</text>
      <text class="value">{{userInfo.name || userInfo.nickname || '未设置'}}</text>
    </view>
    
    <view class="info-item">
      <text class="label">手机号：</text>
      <text class="value">{{userInfo.phone_number || '未绑定'}}</text>
    </view>
    
    <view class="info-item">
      <text class="label">小区：</text>
      <text class="value">{{communityInfo || '未绑定小区'}}</text>
    </view>
    
    <view class="info-item">
      <text class="label">房屋：</text>
      <text class="value">{{houseInfo || '未绑定房屋'}}</text>
    </view>
    
    <view class="info-item">
      <text class="label">业主类型：</text>
      <text class="value">{{userInfo.owner_type || '业主'}}</text>
    </view>
  </view>
</view> 